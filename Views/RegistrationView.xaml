<Window x:Class="AdAgency.Views.RegistrationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Register yourself!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Label Content="Agency Name" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox Width="200" Margin="5" Text="{Binding AgencyName}"/>
            <Label Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox Width="200" Margin="5" Text="{Binding Username}"/>
            <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox Width="200" Margin="5" Text="{Binding Password}"/>
            <Button Width="200" Margin="5" Content="Register" Command="{Binding RegisterCommand}"/>
        </StackPanel>
    </Grid>
</Window>