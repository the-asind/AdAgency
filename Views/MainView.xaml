<Window x:Class="AdAgency.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main" Width="1280" Height="720" Loaded="Window_Loaded">
    
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="15" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label Content="Логин пользователя: " FontSize="24" FontWeight="Bold"/>
                <Label Content="{Binding Username}" FontSize="24"/>
            </StackPanel>
            <Label Name="renterOutput" Content="{Binding RenterOutput}" Margin="15,0,15,15"/>
            <StackPanel Name="RenterGrid">
                <Label Content="Информация по арендаторам:" Padding="15,0,0,0"/>
                <DataGrid ItemsSource="{Binding RenterInfo}" AutoGenerateColumns="True" Margin="15" Height="100" />
            </StackPanel>
            <StackPanel Name="BillboardsGrid">
                <Label Content="Рекламные щиты:" Padding="15,0,0,0" />
                <DataGrid ItemsSource="{Binding ContractsBillboards}" AutoGenerateColumns="True" Margin="15"
                          Height="100" />
            </StackPanel>
            <Label Content="Контракты:" Padding="15,0,0,0"/>
            <DataGrid ItemsSource="{Binding Contracts}" AutoGenerateColumns="True" Margin="15" Height="100" />
            <Label Content="Работы по монтажу:" Padding="15,0,0,0"/>
            <DataGrid ItemsSource="{Binding AdvertisementWorks}" AutoGenerateColumns="True" Margin="15" Height="100" />
            <Button Name="AdminButton" Content="Админ-панель" Command="{Binding AdminPanelCommand}" Margin="5"/>
            <Button Name="ConfiguratorButton" Content="Конфигурирование рекламных щитов" Command="{Binding ConfigureBillboardsCommand}" Margin="5"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button Name="RenterButton" Content="Заказ рекламного щита" Command="{Binding OrderBillboardCommand}" Margin="5"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>
    </Grid>
</Window>