<Window x:Class="AdAgency.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Available Billboards" FontWeight="Bold" Margin="5"/>
            <DataGrid ItemsSource="{Binding AvailableBillboards}" AutoGenerateColumns="True" Margin="5" Height="300"/>
            <Button Content="Order Billboard" Command="{Binding OrderBillboardCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>